@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row profileMainContent__wrap__row">
    <h3>@ViewData["Title"]</h3>
    <div class="col-md-6 profileMainContent">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating profileMainContent__inputBlock">
                <span class="profileMainContent__inputBlock__title">User Name</span> <br>
                <input asp-for="Input.Username" placeholder="Username" class="profilePromo__row__input" />
                @*<label asp-for="Input.Username" class="form-label"></label>*@
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating profileMainContent__inputBlock">
                <span class="profileMainContent__inputBlock__title">Phone Number</span> <br>
                <input asp-for="Input.PhoneNumber" placeholder="PhoneNumber" class="profilePromo__row__input" />
                @*<label asp-for="Input.PhoneNumber" class="form-label"></label>*@
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating profileMainContent__inputBlock"> 
                <span class="profileMainContent__inputBlock__title">Profile Image</span> <br>
                <input type="file" asp-for="Input.Image" accept="image/*" class="profilePromo__row__input">
                @*<label asp-for="Input.Image" class="form-label"></label>*@
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="defaultButton"><span>Save</span></button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
