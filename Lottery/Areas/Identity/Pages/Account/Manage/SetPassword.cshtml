@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}


<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info" style="text-align:center">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="row profileMainContent__wrap__row">
    <h3>Set your password</h3>
    <div class="col-md-6 profileMainContent">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating profileMainContent__inputBlock">
                <span class="profileMainContent__inputBlock__title">New Password</span> <br>
                <input asp-for="Input.NewPassword" placeholder="New Password" class="profilePromo__row__input" autocomplete="new-password" />
                @*<label asp-for="Input.NewPassword" class="form-label"></label>*@
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating profileMainContent__inputBlock">
                <span class="profileMainContent__inputBlock__title">Confirm New Password</span> <br>
                <input asp-for="Input.ConfirmPassword" placeholder="Confirm New Password" class="profilePromo__row__input" autocomplete="new-password" />
                @*<label asp-for="Input.ConfirmPassword" class="form-label"></label>*@
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="defaultButton"><span>Set password</span></button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
