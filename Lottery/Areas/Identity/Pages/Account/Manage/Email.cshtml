@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}


<partial name="_StatusMessage" for="StatusMessage" />
<div class="row profileMainContent__wrap__row">
    <h3>@ViewData["Title"]</h3>
    <div class="col-md-6 profileMainContent" >
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group profileMainContent__inputBlock">
                    <span class="profileMainContent__inputBlock__title">Confirmed Email</span> <br>
                    <input asp-for="Email" disabled placeholder="Email" class="profilePromo__row__input"/>
                        @*<div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>*@
                    @*<label asp-for="Email" class="form-label"></label>*@
                </div>
            }
            else
            {
                <div class="form-floating profileMainContent__inputBlock">
                    <span class="profileMainContent__inputBlock__title">Email</span> <br>
                    <input asp-for="Email" disabled placeholder="Email" class="profilePromo__row__input"/>
                    @*<label asp-for="Email" class="form-label"></label>*@
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                </div>
            }
            <div class="form-floating profileMainContent__inputBlock">
                <span class="profileMainContent__inputBlock__title">New Email</span> <br>
                <input asp-for="Input.NewEmail" autocomplete="email" aria-required="true" placeholder="Email" class="profilePromo__row__input"/>
                @*<label asp-for="Input.NewEmail" class="form-label"></label>*@
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="defaultButton"><span>Change email</span></button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
