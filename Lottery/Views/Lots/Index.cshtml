@model IEnumerable<Lottery.Models.Lot>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add Lot</a>
</p>
<table class="">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketPrice)
                </td>
                <td>
                    @if (item.Photo.Image != null)
                    {
                        <img style='width:80px; height:60px;' src="data:image;base64,@(Convert.ToBase64String(item.Photo.Image))" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LotId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LotId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.LotId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
